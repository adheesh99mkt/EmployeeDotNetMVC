@using DotNetPracticeMVC.Models;
@{
    <html>
        <head>
            <h1>Employee details</h1>
        </head>
        <body>
            <form action="/Employee/GetByID" method="post">
                <label for="empId">Enter the Emp Id:</label>
                <input type="number" id="empId" name="id"/>
                <button type="submit">Get Employee</button>
            </form>
        @if (ViewData["data2"] != null)
        {
            var emp = (Employees)ViewData["data2"];
            <ul>
                <li>Name:@emp.Name</li>
                <li>Job:@emp.Job</li>
                <li>Salary:@emp.Salary</li>
                <li>Age:@emp.Age</li>
                <li>AccountNo:@emp.AccountNo</li>
            </ul>
        }
        </body>
    </html>
}
